.post-container{
	display: flex;
	flex-direction: column;
	background-color: #ffffff;
	margin: 20rpx 0 40rpx 0;
	border-top: 1px solid #ededed;
	border-bottom: 1px solid #ededed;
}
.post-author-date{
	margin: 10rpx 0 20rpx 10rpx;
}
.post-author-date image{
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
}
.post-author-date text{
	margin-left: 20rpx;
	margin-bottom: 10px;
	vertical-align: middle;
}
.post-tit{
	font-size: 34rpx;
	font-weight: 600;
	color: #333333;
	padding-bottom: 5px;
	margin: 0 0 10px 10px;
}
.post-img{
	width: 100%;
	height: 500rpx;
}
.post-dis{
	padding: 10px;
	line-height: 20px;
}
.post-star-view{
	height: 40rpx;
	padding: 5px 20rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
	background-color: #e4e4e4;
}
.post-star-view image{
	width: 40rpx;
	height: 40rpx;
	margin-right: 5px;
}
.post-star-view text{
	line-height: 40rpx;
	padding-right: 20px;
}